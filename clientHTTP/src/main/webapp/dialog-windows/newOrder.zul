<window title="Nowe zamówienie" border="normal" closable="true" action="show: slideDown;hide: slideUp" width="500px">
    
	<grid style="margin-bottom:10px;">
		<columns >
			<column/>
			<column/>
		</columns>
		<rows>
			<row>
				<label value="Tytuł"/>
				<textbox value="@bind(vm.newOrder.title)" constraint="no empty"/>
			</row>
			<row>
				<label value="Wiadomośc grupowa"/>
				<textbox value="@bind(vm.newOrder.msg)" constraint="no empty"/>
			</row>
		</rows>
	</grid>
	<button label="Dodaj" onClick="@command('newOrder')"/>
	
</window>
